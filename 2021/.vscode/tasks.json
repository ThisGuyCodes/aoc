{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "yarn tsc",
            "problemMatcher": ["$tsc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "yarn tsc --watch",
            "problemMatcher": ["$tsc-watch"],
            "group": "build",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}